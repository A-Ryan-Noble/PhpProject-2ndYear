{% if username == 'admin' %}

    {% block adminAccountsPage %} current_page {% endblock %}

{% endif %}

{% if username == 'staff' %}

    {% block staffAccountsPage %} current_page {% endblock %}

{% endif %}

{% block main %}

    <div class = "column_container">

        <section class = "top">

            <h4>Enter details of the new Products:</h4>

        </section>

    </div>

    <div class = "column_container">

        <section class = "middle">

            <form method="post" action="/index.php?action=productCreate">
                <input type="hidden" name="action" value="productCreate">

                <p>
                    Image : <input type="file" name="productImage">
                </p>

                <p>
                    Description: <input type="text" name="productDescription" autofocus required>
                </p>

                <p>
