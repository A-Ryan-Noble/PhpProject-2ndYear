{% extends '_template.html.twig' %}

{% if username == 'admin' %}

    {% block adminAccountsPage %} current_page {% endblock %}

{% endif %}

{% if username == 'staff' %}

    {% block staffAccountsPage %} current_page {% endblock %}

{% endif %}

{% block main %}

    <div class = "column_container">

        <section class = "middle">

            <h3>Confirm the edit of visitor with the following details: </h3>

            <form method="post" action="/index.php?action=visitorUpdate">
                <input type="hidden" name="action" value="visitorUpdate">

                <p>
                    Id is: <input type="text" name="id" value="{{ visitor.id }}" readonly>
                <p>
                    Name is: <input type="text" name="aName" value="{{ visitor.aName }}">
                </p>

                <p>
                    Email is: <input type="email" name="aEmail" value="{{ visitor.aEmail }}">
                </p>

                <p>
                    Password is:  <input type="text" name="aPassword" value="{{ visitor.aPassword }}">
                </p>

                <p>
                    {# Will Show the option selected before any changes #}
                    {% if(visitor.emailNotify == 'Yes') %}
                        Receive Emails: <input type="radio" name="emailNotify" checked value = "Yes">YES <input type="radio" name="emailNotify"  value="No">NO
                    {% else%}
                        Receive Emails: <input type="radio" name="emailNotify" value = "Yes">YES <input type="radio" name="emailNotify" checked value="No">NO
                    {% endif  %}
                </p>

                <input type="submit" value="Update">

            </form>

        </section>

    </div>

{% endblock %}