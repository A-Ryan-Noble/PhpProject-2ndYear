{% extends '_template.html.twig' %}

{% block accountsPage %} current_page {% endblock %}

{% block main %}

    <div class = "column_container">

        <section class = "left_side">

            <h3>Sign Up Below:</h3>

            <form method="post" action="/index.php?action=createUserAccount">
                <input type="hidden" name="action" value="createUserAccount">

                <p>
                    First Name:<input type ="text" name ="firstName" placeholder = "Enter first name" required autofocus>

                </p>

                <p>
                    Last Name:<input type = "text" name ="lastName" placeholder = "Enter last name" required>
                </p>

                <p>
                    Email:<input type = "email" name="emailAddress"  placeholder= "Enter email address" required>
                </p>

                <p>
                    Password:<input type = "password" name="passWord" placeholder="Enter password" required>
                </p>

                <p>
                    Receive Emails: <input type="radio" name="emailNotified" value = "Yes">YES <input type="radio" name="emailNotified" checked value="No">NO
                </p>

                <input type="submit" value="Update">

            </form>

        </section>

    </div>

{% endblock %}