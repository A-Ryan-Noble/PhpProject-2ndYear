{% extends '_template.html.twig' %}

{% if username == 'admin' %}

    {% block adminAccountsPage %} current_page {% endblock %}

{% endif %}

{% if username == 'staff' %}

    {% block staffAccountsPage %} current_page {% endblock %}

{% endif %}

{% block main %}

    <div class = "column_container">

        <section class = "top">

            <h4>Enter details of the new Visitor:</h4>

        </section>

    </div>

    <div class = "column_container">

        <section class = "middle">

            <form method="post" action="/index.php?action=visitorCreate">
                <input type="hidden" name="action" value="visitorCreate">

                <p>
                    Name: <input type="text"  name="aName" value="" autofocus required>
                </p>

                <p>
                    Email: <input type="email" name="aEmail" required>
                </p>

                <p>
                    Password: <input type="text"  name="aPassword" required>
                </p>

                <p>
                    Receive Emails: <input type="radio" name="emailNotify" value = "Yes">YES <input type="radio" name="emailNotify" checked value="No">NO
                </p>

                <input type="submit" value="Create">

            </form>

        </section>

    </div>

{% endblock %}
