{% extends '_template.html.twig' %}

{% if username == 'admin' %}

    {% block adminAccountsPage %} current_page {% endblock %}

{% endif %}

{% if username == 'staff' %}

    {% block staffAccountsPage %} current_page {% endblock %}

{% endif %}

{% block main %}

    <div class = "column_container">

        <section class = "top">

            <h4>Enter details of the new Admin:</h4>

        </section>

    </div>

    <div class = "column_container">

        <section class = "middle">

            <form method="post" action="/index.php?action=adminCreate">
                <input type="hidden" name="action" value="adminCreate">

                <p>
                    Name:<input type="text"  name="aName" value="" autofocus required>
                </p>

                <p>
                    Password:<input type="text"  name="aPassword" required>
                </p>

                <input type="submit" value="Create">

            </form>

        </section>

    </div>

{% endblock %}
