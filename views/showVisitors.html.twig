{% extends '_template.html.twig' %}

{% if username == 'admin' %}

    {% block adminAccountsPage %} current_page {% endblock %}

{% endif %}

{% if username == 'staff' %}

    {% block staffAccountsPage %} current_page {% endblock %}

{% endif %}

{% block main %}

    <div class = "column_container">

        <section class = "left_side">

            <h2>Visitors:</h2>

            {#  Will go back to the  logged in page   #}
            <p>
                <a href="/index.php?action=loggedIn">Go Back to {{ username }}  page</a>
            </p>

            <table>

                <tr>
                    <th id="titleRow">ID</th>
                    <th id="titleRow"> Name</th>
                    <th id="titleRow">Email</th>
                    <th id="titleRow">Password</th>
                    <th id="titleRow">Get Emails</th>
                </tr>

                {% for visitors  in visitor %}
                    <tr>
                        <th>{{ visitors.id }}</th>
                        <th>{{ visitors.aName }}</th>
                        <th>{{ visitors.aEmail }}</th>
                        <td style="background-color: inherit">{{ visitors.aPassword }}</td>
                        <th>{{ visitors.emailNotify }}</th>
                    </tr>
                {% endfor %}

            </table>

            <br>
            <br>

            <table>
                {% for visitors in visitor %}
                    <tr>
                        <th id ="titleRow">Username:<span id = "padRight">{{ visitors.aName }}</span></th>
                        <th><a style="color: lightcoral"  href="/index.php?action=editVisitor&id={{ visitors.id }}">Edit</a></th>
                        <th><a style="color: lightcoral" href="/index.php?action=deleteVisitor&id={{ visitors.id }}">Delete</a></th>
                        <th><a style="color: lightcoral"  href="/index.php?action=visitorShow&id={{ visitors.id }}">Show</a></th>
                    </tr>
                {% endfor %}
            </table>

            <br>
            <br>

            <table>
                <tr>
                    <th>Create Visitor:</th>
                    <th><a style="color: lightcoral" href="/index.php?action=createVisitor">Create</a></th>
                </tr>
            </table>

        </section>

    </div>

{% endblock %}